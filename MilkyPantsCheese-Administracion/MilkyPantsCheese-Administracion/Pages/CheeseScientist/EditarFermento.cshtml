@page
@model MilkyPantsCheese.Pages.EditarFermentoModel

<form method="post"
      class="d-flex flex-column">
    
    @*Mensaje de error general*@
    @Html.ValidationMessageFor(m => m.IdFermentoSiendoEditado, string.Empty, new { @class = "text-danger" })

    @*Peso del fermento*@
    <div class="form-group">
        <label asp-for="PesoFermento"></label>
        <input type="text" asp-for="PesoFermento" class="form-text" placeholder="Peso del fermento" />
    </div>

    @*Ingreso fecha*@
    <div class="form-group">

        <label asp-for="FechaElaboracion"></label>
        <input id="ingresoFechaFermento" type="date" asp-for="FechaElaboracion" class="form-control" />
    </div>

    @*Checkbox esta disponible*@
    <div class="form-group">

        <label asp-for="EstaDisponible"></label>
        <input type="checkbox" asp-for="EstaDisponible" />
    </div>

    @*Observaciones*@
    <div class="form-group">

        <label asp-for="Observaciones"></label>
        <textarea asp-for="Observaciones" class="form-text" cols="35" rows="10" style="resize: both; max-width: 800px; max-height: 100px"></textarea>
    </div>
    
    @*Id del modelo siendo editado*@
    <input type="hidden" asp-for="IdFermentoSiendoEditado" />
    
    <div class="d-flex flex-row flex-wrap">
        @*Boton editar*@
        <input type="submit" value="Editar" class="btn btn-warning align-self-start" style="width: 100px" />
        
        @*Boton cancelar*@
        <a asp-page="/CheeseScientist/AdministrarFermentos" class="text-danger align-self-end py-2 px-3">Cancelar</a>
    </div>

</form>