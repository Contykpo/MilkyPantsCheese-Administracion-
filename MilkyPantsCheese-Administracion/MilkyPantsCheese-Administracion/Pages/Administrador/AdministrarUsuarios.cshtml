@page
@model MilkyPantsCheese.Pages.AdministrarUsuariosModel

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/css/bootstrap-select.min.css">

<form method="post"
      data-ajax="true"
      data-ajax-method="post"
      data-ajax-mode="replace"
      data-ajax-update="#listaUsuarios">

      <div class="container border-bottom border-warning">

          <div class="row">

              @*Nombre del usuario*@
              <div class="col-6">

                  <label asp-for="NombreUsuario" class="text-warning"></label>
                  <input class="d-block form-text" type="text" asp-for="NombreUsuario" placeholder="Nombre del usuario"/>
              </div>

              <div class="col-2"></div>

              <div class="col-4">
                  <input type="submit" class="btn btn-warning" value="Buscar" style="width: 75px"/>
              </div>
          </div>

          @*Tipos de usuario buscados*@
          <div class="row mt-2">
              <div class="form-group col-6">

                  <label asp-for="TiposDeUsuarioSeleccionados" class="text-warning"></label>
                  <select class="selectpicker d-block" title="Nada seleccionado" asp-for="TiposDeUsuarioSeleccionados" asp-items="@Model.TiposDeUsuarioDisponibles" multiple></select>
              </div>

              <div class="col-2"></div>

              <div class="col-4">
                  <a asp-page="/Administrador/RegistrarUsuario" class="btn btn-warning" style="width: 75px">Crear</a>
              </div>
          </div>

          @*Indica si mostrar los usuarios que se encuentran deshabilitados*@
          <div class="row mt-2">
              <div class="form-group col-6">

                  <input type="checkbox" asp-for="MostrarUsuariosDeshabilitados"/>
                  <label class="form-check-label text-warning" asp-for="MostrarUsuariosDeshabilitados"></label>
              </div>
          </div>
      </div>

</form>

<div id="listaUsuarios" class="d-flex flex-column mt-5">

</div>

@section Scripts
{
    <script type="text/javascript" src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/js/bootstrap-select.min.js"></script>

    <script type="text/javascript">

        $('.selectpicker').selectpicker();

    </script>
}
